<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blogCardViewId"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#CFDAD5"
        android:weightSum="5"
        >
        <ImageView
            android:id="@+id/bloglistImageViewId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#5BE9FB"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/titleBloglistTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="How to study"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                />
            <TextView
                android:id="@+id/keywordBlogListTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Keyword"
                android:textStyle="normal"
                android:layout_marginLeft="13dp"
                />
            <TextView
                android:id="@+id/catagoryBlogListTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Catagory"
                android:textStyle="normal"
                android:layout_marginLeft="13dp"
                />

            <TextView
                android:id="@+id/publishedByBlogListTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Published By"
                android:textStyle="normal"
                android:layout_marginLeft="13dp"
                />



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

