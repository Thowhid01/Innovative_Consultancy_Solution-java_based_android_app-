<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2D6E8"
    tools:context=".OneConsultant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:background="#CEDAD5"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="30dp"

                >
                <ImageView
                    android:id="@+id/imageOneConsultntImageViewid"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic"

                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="20dp"
            >
            <Button
                android:id="@+id/blogOneConsultantTvId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Blog"
                android:layout_marginRight="20dp"
                android:backgroundTint="#25593E"
                />
            <Button
                android:id="@+id/videoOneConsultantTvId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Video"
                android:backgroundTint="#25593E"
                />


        </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="15dp"
               >
               <TextView
                   android:id="@+id/nameOneConsultantTvId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Mohammad Faisal"
                   android:textSize="30dp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   />
               <TextView
                   android:id="@+id/expertOneConsultantTvId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Teacher"
                   android:textSize="25dp"
                   android:textColor="@color/black"
                   android:textStyle="normal"
                   />
               <TextView
                   android:id="@+id/phoneOneConsultantTvId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="01878141051"
                   android:textSize="25dp"
                   android:textStyle="italic"
                   />

               <TextView
                   android:id="@+id/emailOneConsultantTvId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="faisal574681@gmail.com"
                   android:textSize="25dp"
                   android:textStyle="italic"
                   android:layout_marginBottom="20dp"
                   />
           </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >
            <TextView
                android:id="@+id/aboutNameOneConsaluntantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Mohammad Faisal"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/aboutDetailsoneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My name is Mohammad Faisal.I am a Student of BGC Trust University Bangladesh.I am 22 years old.My study subject is CSE.Now I am in six semester."
                android:textStyle="normal"
                android:textSize="20dp"
                android:justificationMode="inter_word"
                />
            <TextView
                android:id="@+id/genderOneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender           : Male"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/bloodOneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group  :B+"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/dateOfBirthOneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth : 03/03/2000"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:backgroundTint="#681DED"

                >
                <Button
                    android:id="@+id/backToHomeOneConsultantBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hire Me"
                    android:textStyle="bold"
                    android:backgroundTint="#25593E"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</ScrollView>