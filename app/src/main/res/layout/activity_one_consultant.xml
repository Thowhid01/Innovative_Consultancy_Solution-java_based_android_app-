<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OneConsultant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        >
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="20dp"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="10dp"
               android:background="#B4509A78"
               >
               <TextView
                   android:id="@+id/nameOneConsultantTvId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Mohammad Faisal"
                   android:textSize="30dp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   />
               <TextView
                   android:id="@+id/expertOneConsultantTvId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Teacher"
                   android:textSize="25dp"
                   android:textColor="@color/black"
                   android:textStyle="normal"
                   />
               <TextView
                   android:id="@+id/phoneOneConsultantTvId"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="01878141051"
                   android:textSize="25dp"
                   android:textStyle="italic"
                   android:layout_marginBottom="20dp"
                   />
           </LinearLayout>

       </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            >
           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:elevation="10dp"
               app:cardCornerRadius="30dp"

               >

               <ImageView
                   android:id="@+id/imageOneConsultntImageViewid"
                   android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/pic"

                   />
           </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/aboutNameOneConsaluntantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Mohammad Faisal"
                android:textSize="30sp"

                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/aboutDetailsoneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My name is Mohammad Faisal.I am a Student of BGC Trust University Bangladesh.I am 22 years old.My study subject is CSE.Now I am in six semester."
                android:textStyle="normal"
                android:textSize="20dp"
                android:justificationMode="inter_word"
                />
            <TextView
                android:id="@+id/genderOneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender Male"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/bloodOneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group B+"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/dateOfBirthOneConsultantTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth 03/03/2000"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:backgroundTint="#681DED"

                >
                <Button
                    android:id="@+id/backToHomeOneConsultantBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hire me "
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</ScrollView>