<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeBlogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/blogBodyTextViewId"
            android:hint="What's on your mind ??"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:background="#CDEDDC"
            android:layout_height="250dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/black"
            >

            <EditText
                android:id="@+id/titleEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDEDDC"
                android:textColor="@color/black"
                android:hint="Add a Title"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/keywordEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDEDDC"
                android:textColor="@color/black"
                android:hint="Keyword"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/catagoryEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDEDDC"
                android:textColor="@color/black"
                android:hint="Catagory"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/picUploadButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="#CDEDDC"
                />

            <Button
                android:id="@+id/blogpublishButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publish"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#25593E"
                />


        </LinearLayout>



    </LinearLayout>






</ScrollView>